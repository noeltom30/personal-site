---
const url = Astro.url.pathname;
---

<div class="nav-links">
  <nav>
    <a href="/" class="home">Home</a>
    <a class={url.includes("about") ? "active" : ""} href="/about/">About</a>
    <a
      class={url.includes("blog") ||
      url.includes("tag") ||
      url.includes("posts")
        ? "active"
        : ""}
      href="/blog/">Blog</a
    >
    <a class={url.includes("projects") ? "active" : ""} href="/projects/"
      >Projects</a
    >
  </nav>
</div>
<hr class="gradient-divider">

<script></script>
<style>
  .nav-links{
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 10px 0;
  }
  nav {
    display: flex;
    gap: 20px;
  }
  nav a {
    display: block;
    font-size: 1.4rem;
  }
  nav a.active {
    text-decoration: underline;
    text-underline-offset: 10px;
    text-decoration-color: white;
    text-decoration-thickness: 2px;
  }

</style>
