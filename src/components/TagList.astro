---
import { Debug } from "astro:components";
import { boolean } from "astro:schema";
const { temp } = Astro.params;
let allPosts;

const {tags} = Astro.props;
const pathMatcher = new RegExp("posts");
let tagListCondition = pathMatcher.test(Astro.url.pathname);
allPosts = Object.values(
  import.meta.glob("../pages/posts/*.md", { eager: true })
);

const uniqueTags = [
  ...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())
];
---

<div class="tag-list-container">
  <!-- <Debug answer=  /> -->
  <h3 style="margin: 10px 5px;">Tags</h3>
  <hr />
  <div class="tag-container">
    {
      uniqueTags.map((tag) => (
        <a href={`../tags/${tag}`} class="tag">
          {tag}
        </a>
      ))
    }
  </div>
</div>
<style>
  .tag {
    padding: 0.5rem 0.7rem;
    border-radius: 9px;
    background-color: rgba(36, 44, 44, 0.692);
  }
  .tag-container {
    margin-top: 15px;
    gap: 10px;
    display: flex;
    flex-wrap: wrap;
  }
  .tag-list-container {
    margin-inline: auto;
    width: 80%;
    margin-top: 30%;
    padding-left: 20px;
  }
</style>
