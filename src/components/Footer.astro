---
const socials = {
  github: "noeltom30",
  instagram: "noel_30_tom",
  linkedin: "in/noeltom30",
};
---

<footer>
  <div class="socials">
    {
      Object.entries(socials).map(([site, username]) => (
        <a
          href={`https://${site}.com/${username}`}
          target="_blank"
          rel="noopener noreferrer"
        >
          <i class={`fa-brands fa-${site}`}/>
        </a>
      ))
    }
  </div>
</footer>
<style>
  footer {
    display: flex;
    align-items: center;
    height: 7%;
    /* border: solid rgba(255, 255, 255, 0.253) 1px; */
  }
  .socials {
    margin-left: 25px;
    display: flex;
    gap: 12px;
  }
  i {
    font-size: 1.2em;
    color: rgb(59, 104, 104);
  }
</style>
