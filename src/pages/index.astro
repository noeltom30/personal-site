---
import Navigation from "../components/Navigation.astro";
import "../styles/index.css";
// import "../styles/index2.css";
const socials = {
  github: "noeltom30",
  instagram: "noel_30_tom",
  linkedin: "in/noeltom30",
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/x-icon" href="../../favicon.ico" />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Welcome</title>
    <script
      src="https://kit.fontawesome.com/a2137a72a9.js"
      crossorigin="anonymous"></script>
  </head>
  <body>
    <main>
      <div class="name-container">NOEL TOM</div>
      <div class="divider"></div>
      
      <nav>
        <a href="/about/">About</a>
        <a href="/blog/">Blog</a>
        <a href="/projects/">Projects</a>
      </nav>
      <div class="divider" id="dividertwo"></div>
      <div class="socials">
        {
          Object.entries(socials).map(([site, username]) => (
            <a
              href={`https://${site}.com/${username}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <i class={`fa-brands fa-${site}`}/>
            </a>
          ))
        }
      </div>
    </main>
  </body>
</html>
